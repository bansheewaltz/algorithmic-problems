{
  "tasks": [
    {
      "type": "shell",
      "label": "build debug",
      "command": "mkdir -p build && clang++ -DLOCAL -g -fsanitize=address -std=c++20 ${fileBasename} -o build/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent",
        "focus": true,
        "showReuseMessage": false
      }
    },
    {
      "type": "shell",
      "label": "build and test",
      "command": "./test build/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": [
        "build debug"
      ],
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    },
    {
      "type": "shell",
      "label": "test",
      "command": "./test build/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "focus": true
      }
    },
    {
      "type": "shell",
      "label": "run",
      "command": "build/${fileBasenameNoExtension}.out",
      "options": {
        "cwd": "${fileDirname}"
      },
      "dependsOn": [
        "build debug"
      ],
      "presentation": {
        "reveal": "always",
        "focus": true,
        "showReuseMessage": false
      }
    }
  ],
  "version": "2.0.0"
}

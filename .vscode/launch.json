{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "lldb",
      "type": "lldb",
      "request": "launch",
      "program": "${fileDirname}/build/${fileBasenameNoExtension}.out",
      "stdio": "in.txt",
      "cwd": "${fileDirname}",
      "preLaunchTask": "debug build",
    },
    {
      "name": "debugpy",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "args": [
        "<",
        "in.txt"
      ],
      "cwd": "${fileDirname}",
    },
    {
      "name": "debug tester",
      "type": "lldb",
      "request": "launch",
      "program": "dtest",
      "args": [
        "build/${fileBasenameNoExtension}.out"
      ],
      "cwd": "${fileDirname}",
      "preLaunchTask": "debug build",
    },
  ]
}
